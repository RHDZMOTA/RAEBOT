<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE web-app PUBLIC
        "-//Oracle Corporation//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
        <servlet-name>defs</servlet-name>
        <servlet-class>com.iteso.app.controller.DefinitionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>freq</servlet-name>
        <servlet-class>com.iteso.app.controller.FrequencyController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>defs</servlet-name>
        <url-pattern>/define</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>freq</servlet-name>
        <url-pattern>/freq</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>

